@model LiveUpdate.Models.Update

@{
    ViewBag.Title = "Add a new item";
}

<h2>Add a new item</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Add</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.UpdateType)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(
                model => model.UpdateType, 
                new SelectList(
                    new List<string> { 
                        LiveUpdate.Models.Utilities.UpdateType.Event.ToString(), 
                        LiveUpdate.Models.Utilities.UpdateType.News.ToString() 
                    },
                    new { @id = "select_01_type", @tabindex = "1" }
                )
            )
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
